// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "ctrl+[BracketLeft]",
        "command": "workbench.action.navigateBack"
    },
    {
        "key": "ctrl+alt+-",
        "command": "-workbench.action.navigateBack" // remove previous keybinding
    },
    {
        "key": "ctrl+[BracketRight]",
        "command": "workbench.action.navigateForward"
    },
    {
        "key": "ctrl+u",
        "command": "-cursorUndo",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen" // e.g. when pressing ctrl+P
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen" // e.g. when pressing ctrl+P
    },
    {
        "key": "ctrl+j",
        "command": "selectNextSuggestion",
        "when": "editorTextFocus && suggestWidgetVisible" // when code autocomplete is shown
    },
    {
        "key": "ctrl+k",
        "command": "selectPrevSuggestion",
        "when": "editorTextFocus && suggestWidgetVisible" // when code autocomplete is shown
    },
    {
        "key": "ctrl+h",
        "command": "list.collapse",
        "when": "listFocus && !inputFocus" // e.g. scroll in changed items in git view
    },
    {
        "key": "ctrl+l",
        "command": "list.expand",
        "when": "listFocus && !inputFocus" // e.g. scroll in changed items in git view
    },
    {
        "key": "ctrl+j",
        "command": "list.focusDown",
        "when": "listFocus && !inputFocus" // e.g. scroll in changed items in git view
    },
    {
        "key": "ctrl+k",
        "command": "list.focusUp",
        "when": "listFocus && !inputFocus" // e.g. scroll in changed items in git view
    },

    // ctrl+w h to move between back to editor from explorer tree
    {
        "key": "` h",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "filesExplorerFocus"
    },
    {
        "key": "ctrl+w h",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "filesExplorerFocus"
    },


]
